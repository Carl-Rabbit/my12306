<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dbpp.my12306.mapper.PassengerMapper">

    <select id="count" resultType="Integer">
        select count(*)
        from passengers
    </select>

    <select id="countAllOf" resultType="Integer">
        select count(*)
        from passengers
        where user_id = #{userId}
    </select>

    <select id="getById" resultType="com.dbpp.my12306.entity.Passenger">
        select *
        from passengers
        where passenger_id = #{id}
    </select>

    <select id="getAll" resultType="com.dbpp.my12306.entity.Passenger">
        select *
        from passengers
    </select>

    <select id="getAllOf" resultType="com.dbpp.my12306.entity.Passenger">
        select *
        from passengers
        where user_id = #{userId}
    </select>

    <insert id="add" useGeneratedKeys="true" keyProperty="user_id">
        insert into passengers (user_id, first_name, last_name,
                                kind, gender, id_no)
        values (#{userId}, #{firstName}, #{lastName},
                #{kind}, #{gender}, #{idNo})
    </insert>

    <update id="hide">
        update passengers
        set available = 'N'
        where passenger_id = #{id};
    </update>

    <delete id="delete">
        delete
        from passengers
        where passenger_id = #{id};
    </delete>

</mapper>