<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dbpp.my12306.mapper.OrderMapper">

    <select id="count" resultType="Integer">
        select count(*)
        from orders
    </select>

    <select id="countAllOf" resultType="Integer">
        select count(*)
        from orders
        where user_id = #{userId}
    </select>

    <select id="getById" resultType="com.dbpp.my12306.entity.Order">
        select *
        from orders
        where order_id = #{id}
    </select>

    <select id="getAll" resultType="com.dbpp.my12306.entity.Order">
        select *
        from orders
    </select>

    <select id="getAllOf" resultType="com.dbpp.my12306.entity.Order">
        select *
        from orders
        where user_id = #{userId}
    </select>

</mapper>